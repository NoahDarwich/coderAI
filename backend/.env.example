# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/data_extraction
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration (optional for MVP, required for production)
REDIS_URL=redis://localhost:6379/0

# LLM Provider Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.2
OPENAI_MAX_TOKENS=1000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
API_PREFIX=/api/v1

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Security (for future use)
SECRET_KEY=your-secret-key-here-replace-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
PROJECT_NAME=Data Extraction Backend
VERSION=1.0.0
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Processing Configuration
MAX_DOCUMENT_SIZE_MB=10
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT_SECONDS=3600
LLM_RETRY_MAX_ATTEMPTS=3
LLM_RETRY_BASE_DELAY=1.0
LLM_RETRY_MAX_DELAY=10.0
LLM_RATE_LIMIT_CALLS=10
LLM_RATE_LIMIT_PERIOD=60
